        if (item.Id > 2)
        {
            <li style="color:darkred">@item.Id:@item.Name</li>
        }
        else
        {
            
            <li><span>编号：@item.Id</span> <b>姓名：@item.Name@@</b></li>
        }

    }

</ul>



