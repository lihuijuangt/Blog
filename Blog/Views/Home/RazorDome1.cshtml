    @{ 
         List<Student> lis = new List<Student>();
         lis.Add(new Student { Id = 1, Name = "张三1" });
         lis.Add(new Student { Id = 2, Name = "张三2" });
         lis.Add(new Student { Id = 3, Name = "张三3" });
         lis.Add(new Student { Id = 4, Name = "张三4" });

    }

<ul>
    @foreach (var item in lis)
